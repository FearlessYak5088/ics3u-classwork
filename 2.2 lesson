# 1 Variables and division vs 
# integer (floor) division
a = 4
b = 1
c = b / a = 4 / 1 = 0.25
d = b // a = 4 // 1 = 0

# 2 Variables and incrementing
a = 5
a = a + 2 = 5 + 2 = 7
b = a = 7
a = a + 1 = 7 + 1 = 8
b = b + a = 7 + 8 = 15

# 3 Variables and increment operators
a = 8
a += 3 = 8 + 3 = 11
b = a = 11
a += 2 = 11 + 2 = 13
b += a = 11 + 13 = 24

# 4 Variables and increment operator 2
total = 0 
total += 1 = 0 + 1 = 1
total += 1 = 1 + 1 = 2
total += 1 = 2 + 1 = 3
total += 1 = 3 + 1 = 4
